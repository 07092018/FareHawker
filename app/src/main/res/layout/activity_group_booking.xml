<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgBottomNavigation"
    tools:context="com.farehawker.GroupBookingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayoutgroup">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/farehawkercolor"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp"
            android:layout_gravity="center"
            android:text="Group Booking" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_inputlayoutgroup_origin"
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/textviewgroup_originselect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Origin    *" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_inputlayoutgroup_destination"
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:layout_marginLeft="10sp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/textviewgroup_destinationselect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Destination    *"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_inputlayoutgroup_departuredate"
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/textgroup_departure_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="Departure date  *"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textgroup_inputlayout_departureturndate"
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:layout_marginLeft="10sp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/textgroup_Returnd_date"
                    android:layout_width="match_parent"
                    android:focusable="false"
                    android:layout_height="wrap_content"
                    android:hint="Return Date"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textgroup_inputlayout_adult"
                android:layout_width="match_parent"
                android:layout_weight="34"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/editgroup_adult_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textSize="15sp"
                    android:hint="Adults   *"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textgroup_inputlayout_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="33">
                <EditText
                    android:id="@+id/editgroup_child_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textSize="15sp"
                    android:hint="Child"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textgroup_inputlayout_infants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="33">
                <EditText
                    android:id="@+id/editgroup_infants_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:inputType="phone"
                    android:hint="Infants"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="50"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textgroup_inputlayout_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50">
                <EditText
                    android:id="@+id/editgroup_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:hint="Company name   *"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textgroup_inputlayout_requestedby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50">
                <EditText
                    android:id="@+id/editgroup_requestby_name"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:hint="Requested By   *"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="50"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textgroup_inputlayout_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50">
                <EditText
                    android:id="@+id/editgroup_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:hint="Your Email Id    *"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textgroup_inputlayout_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50">
                <EditText
                    android:id="@+id/editgroup_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:inputType="phone"
                    android:hint="Mobile Number   *"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <Button
            android:id="@+id/buttongroup_submit"
            android:layout_width="match_parent"
            android:layout_marginTop="20sp"
            android:layout_height="wrap_content"
            android:background="@color/farehawkercolor"
            android:textColor="@color/whitecolor"
            android:text="Submit"/>
    </LinearLayout>
</RelativeLayout>
