<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/custom_bg"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/mainchild_linearlayout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="20"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/onewayimage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="12sp"
                android:src="@drawable/indigo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:orientation="vertical">
            <TextView
                android:id="@+id/onewatflightname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Flight name"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/onewatflightcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="6E"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "/>
                <TextView
                    android:id="@+id/onewatflightnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="102"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/onewatflightseat"
                    android:layout_width="wrap_content"
                    android:textColor="@color/farehawkercolor"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="20"/>
                <TextView
                    android:textColor="@color/farehawkercolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text=" seats left"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:orientation="vertical">
            <TextView
                android:id="@+id/onewatflightarrivtime"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="bold"
                android:text="21:00"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="30"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="m"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:orientation="vertical">
            <TextView
                android:id="@+id/onewatflightdeptime"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="bold"
                android:text="21:00"/>
            <LinearLayout
                android:id="@+id/stop_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/onewatflightstop"
                    android:textColor="@color/farehawkercolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginRight="5sp"
                    android:text="non"/>

                <TextView
                    android:textColor="@color/farehawkercolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="Stop"/>
            </LinearLayout>
            <TextView
                android:id="@+id/resultindex"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hide    "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="20"
            android:layout_gravity="center"

            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:text="â‚¹"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/onewatflightprice"
                android:textColor="@color/farehawkercolor"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:text="3000"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/mainview"
        android:layout_width="match_parent"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="2sp"
        android:layout_below="@+id/mainchild_linearlayout"
        android:background="@color/bgBottomNavigation"
        android:layout_height="2dp"/>
</RelativeLayout>
