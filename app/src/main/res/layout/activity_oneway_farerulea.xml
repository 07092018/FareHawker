<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.farehawker.OnewayFareruleaActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/bgBottomNavigation"
                    android:layout_height="80sp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/onewayname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:layout_marginLeft="10sp"
                            android:textStyle="bold"
                            android:text="Delhi"/>
                        <ImageView
                            android:layout_marginTop="8sp"
                            android:layout_width="25sp"
                            android:layout_height="20sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:src="@drawable/originplan"/>
                        <TextView
                            android:id="@+id/onewaydestname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:text="Mumbai"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="24"
                        android:textStyle="bold"
                        android:text="Airline"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="25"
                        android:textStyle="bold"
                        android:text="Departure"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_weight="25"
                        android:text="Arrive"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="26"
                        android:text=""/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/oneway_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:text="FARE BREAKUP"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:gravity="center_vertical"
            android:layout_height="50sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20sp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="Base Fare"/>
            <TextView
                android:id="@+id/oneway_basefare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:text="000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20sp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="Taxes"/>
            <TextView
                android:id="@+id/oneway_texas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:text="000"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20sp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:text="Other Charge"/>
                <TextView
                    android:id="@+id/oneway_othercharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:text="000"/>
            </LinearLayout>
        <View
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:layout_width="match_parent"
            android:background="@color/bgBottomNavigation"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20sp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:textStyle="bold"
                android:text="Total"/>
            <TextView
                android:id="@+id/oneway_publisfare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:textStyle="bold"
                android:text="000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="10sp"
            android:layout_height="wrap_content">
            <CheckBox

                android:id="@+id/oneway_chkWindows"
                android:layout_width="wrap_content"
                android:layout_margin="5sp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="I have read and accepted "
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/oneway_term_condi"
                        android:layout_width="wrap_content"
                        android:textColor="#f70bf7"
                        android:text="Terms And Condition"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text=" and"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fare rules of this itinerary."/>
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">
        <Button
            android:id="@+id/oneway_continuebooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/farehawkercolor"
            android:text="Continue Booking"
            android:textColor="@color/whitecolor"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>

